<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import it.polimi.ingsw.client.view.gui.GridManager?>
<?import javafx.scene.image.ImageView?>


<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@styles/style.css">

    <VBox>
        <Label fx:id="username" />

        <GridManager fx:id="bottomLibrary" columns="5" rows="6" tileSize="20" styleClass="current-library" />

        <HBox spacing="5">
            <ImageView fx:id="hasArmchair" styleClass="lib-thumb-icon" />
            <ImageView fx:id="common1Obtained" styleClass="lib-thumb-icon" />
            <ImageView fx:id="common2Obtained" styleClass="lib-thumb-icon" />
            <ImageView fx:id="firstFinished" styleClass="lib-thumb-icon" />
        </HBox>
    </VBox>

</fx:root>
